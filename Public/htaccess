# to use it, change file name to .httaccess

RewriteEngine On

# Mencegah listing direktori
Options -Indexes

# Menulis URL agar tidak tertampil ekstensi halaman .php atau .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L,QSA]
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.html [L,QSA]
RewriteRule ^$ index.php [L,QSA]

# Menulis URL agar tidak tertampil ekstensi halaman .php atau .html [level Subfolder]
RewriteRule ^others/([a-zA-Z0-9_-]+)$ others/$1.php [L,QSA]
RewriteRule ^others/([a-zA-Z0-9_-]+)$ others/$1.html [L,QSA]
RewriteRule ^others/?$ others/index.php [L,QSA]

php_flag display_errors On
php_value error_reporting E_ALL

Options All -Indexes



